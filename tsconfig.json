{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "es5",
      "dom",
      "es2017",
      "dom.iterable"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "removeComments": true,
    "paths": {
      "#build-tools/*": [
        "build-tools/*"
      ],
      "#constants/*": [
        "constants/*"
      ],
      "#components": [
        "components"
      ],
      "#data/*": [
        "data/*"
      ],
      "#enums/*": [
        "enums/*"
      ],
      "#features/*": [
        "features/*"
      ],
      "#hooks/*": [
        "hooks/*"
      ],
      "#store": [
        "store/store.ts"
      ],
      "#types": [
        "types"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "vitest/**/*"
  ]
}
