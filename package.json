{
  "name": "crucible",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "build": "nx build",
    "start": "node server.js",
    "lint": "npx @biomejs/biome check .",
    "lint:apply": "npx @biomejs/biome check --apply .",
    "format": "npx @biomejs/biome format --write .",
    "typecheck": "npx tsc",
    "test": "vitest --silent"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@exile-watch/encounter-data": "^0.9.11",
    "@exile-watch/writ-icons": "^0.3.7",
    "@exile-watch/writ-react": "^0.6.0",
    "@tabler/icons-react": "^2.47.0",
    "classnames": "^2.3.1",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "next": "^14.1.0",
    "react": "^18.2.0",
    "react-cookie": "^7.1.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.10.0",
    "@exile-watch/biome-config": "^0.2.2",
    "@exile-watch/lefthook-config": "^0.5.1",
    "@exile-watch/postcss-config": "^0.2.2",
    "@exile-watch/typescript-config": "^0.3.1",
    "@exile-watch/unit-testing-config": "^0.1.3",
    "@naxodev/nx-cloudflare": "^2.0.1",
    "@nx/next": "18.0.6",
    "@types/lodash": "^4.14.168",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.64",
    "nx": "18.0.8",
    "sass": "^1.71.1"
  },
  "nx": {
    "includedScripts": [],
    "targets": {
      "build": {
        "executor": "@naxodev/nx-cloudflare:next-build",
        "outputs": [
          "{options.outputPath}"
        ],
        "dependsOn": [
          "^build"
        ],
        "defaultConfiguration": "production",
        "options": {
          "outputPath": "{workspaceRoot}/.vercel/outputs/static"
        }
      }
    }
  }
}
