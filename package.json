{
  "name": "crucible",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "start": "node server.js",
    "build": "next build",
    "lint": "npx @biomejs/biome check .",
    "lint:apply": "npx @biomejs/biome check --apply .",
    "format": "npx @biomejs/biome format --write .",
    "typecheck": "npx tsc",
    "qc": "npm run format && npm run lint:apply && npm run typecheck",
    "test": "vitest --silent",
    "postinstall": "npx lefthook install"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@exile-watch/encounter-data": "^0.12.3",
    "@exile-watch/seo": "^0.3.5",
    "@exile-watch/writ-icons": "^0.3.8",
    "@exile-watch/writ-react": "^0.7.2",
    "@tabler/icons-react": "^3.1.0",
    "classnames": "^2.3.1",
    "cookie-parser": "^1.4.5",
    "express": "^4.19.2",
    "lodash": "^4.17.21",
    "next": "^14.1.4",
    "react": "^18.2.0",
    "react-cookie": "^7.1.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.10.0",
    "@exile-watch/biome-config": "^0.3.6",
    "@exile-watch/lefthook-config": "^0.5.11",
    "@exile-watch/postcss-config": "^0.2.2",
    "@exile-watch/typescript-config": "^0.3.2",
    "@exile-watch/unit-testing-config": "^0.2.0",
    "@naxodev/nx-cloudflare": "^2.0.1",
    "@nx/next": "18.1.2",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.11.28",
    "@types/react": "^18.2.64",
    "nx": "18.0.8",
    "sass": "^1.72.0"
  },
  "nx": {
    "includedScripts": [],
    "targets": {
      "build": {
        "executor": "@naxodev/nx-cloudflare:next-build",
        "outputs": ["{options.outputPath}"],
        "defaultConfiguration": "production",
        "options": {
          "outputPath": "{workspaceRoot}"
        }
      }
    }
  }
}
